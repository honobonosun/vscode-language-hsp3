{
  "comments": {
    "blockComment": ["/*", "*/"],
    "lineComment": ";"
  },
  // 符号?(16進数|2進数|(整数|小数?指数?))|プリプロセッサ?ラベル?識別子
  "wordPattern": "-?((0x|\\$)[0-9a-fA-F]+|(0b|%)[01]+|\\d+(\\.\\d+)?([eE]\\d*)?)|(#|\\*)?[^\\\\+\\-*/=<>(){}[\\];:'\"?!&#$,.|^%~\\s\\d][^\\\\+\\-*/=<>(){}[\\];:'\"?!&#$,.|^%~\\s]*",
  // 括弧の定義
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  // 開き文字と対になる閉じ文字を自動挿入する
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "{\"", "close": "\"}", "notIn": ["string"] },
    { "open": "/**", "close": " */", "notIn": ["string"] }
  ],
  // 選択中の文字を囲めるようにする
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["{\"", "\"}"]
  ],
  // 折りたためるようにする
  // editor.minimap.showRegionSectionHeaders で強調されることに注意
  "folding": {
    "markers": {
      "start": "^\\s*#module\\b",
      "end": "^\\s*#global\\b"
    },
    "offSide": true
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(#.*\\\\$)|(\\{[^\\}]*$)|(\\*[^:]*$)|((repeat|foreach|for|do|while|switch|case)[^:]*$)",
    "decreaseIndentPattern": "^\\s*(\\}|loop|next|(until\\b.*)|wend|swend)[^:]*$",
    "indentNextLinePattern": "",
    "unIndentedLinePattern": "^\\s*(;|//).*$"
  }
}
