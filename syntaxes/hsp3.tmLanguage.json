{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HSP",
  "patterns": [
    {"include": "#comments"},
    {"include": "#preprocessors"},
    {"include": "#constants"},
    {"include": "#label"},
    {"include": "#operators"},
    {"include": "#keywords"},
    {"include": "#variable"},
    {"include": "#command"},
    {"include": "#identifier"}
  ],
  "repository": {
    "code": {
      "patterns": [
        {"include": "#comments"},
        {"include": "#constants"},
        {"include": "#label"},
        {"include": "#operators"},
        {"include": "#keywords"},
        {"include": "#variable"},
        {"include": "#command"},
        {"include": "#identifier"}
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hsp3",
          "match": "(;|//).*$"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.hsp3",
          "patterns": [{"include":"text.hs"}]
        }
      ]
    },
    "preprocessors": {
      "patterns": [
        {
          "comment": "#if 0 … #endif",
          "begin": "(?i)^\\s*(#if)\\s+(0)\\s*$",
          "end": "^\\s*(#endif)(?=[^\\w\\p{Cn}`＠])",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "constant.numeric.hsp3"}
          },
          "endCaptures": {"1": {"name": "keyword.control.hsp3"}},
          "contentName": "comment.block.hsp3"
        },
        {
          "comment": "#module name",
          "begin": "(?i)^\\s*(#module)\\s+([\\w\\p{Cn}`＠@]{1,20})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {
              "name": "entity.name.class.hsp3",
              "patterns": [{
                "name": "invalid.illegal.hsp3",
                "match": "(?<=\\s)[0-9].*"
              }]
            },
            "3": {"name": "invalid.deprecated.hsp3"}
          },
          "patterns": [{"include": "#module_variable"}]
        },
        {
          "comment": "#module \"name\"",
          "begin": "(?i)^\\s*(#module)\\s*(\"([\\w\\p{Cn}`＠@]{1,20})([\\w\\p{Cn}`＠@]*)\")",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "string.quoted.double.module.hsp3"},
            "3": {
              "name": "entity.name.class.hsp3",
              "patterns": [{
                "name": "invalid.illegal.hsp3",
                "match": "(?<=\")[0-9]+.*"
              }]
            },
            "4": {"name": "invalid.deprecated.hsp3"}
          },
          "patterns": [{"include": "#module_variable"}]
        },
        {
          "begin": "(?i)^\\s*(#define)(?:\\s+(global))?(?:\\s+(ctype))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {"name": "storage.type.hsp3"},
            "4": {
              "name": "entity.name.function.preprocessor",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "5": {"name": "invalid.deprecated.hsp3"}
          },
          "patterns": [
            {"include": "#comments"},
            {
              "name": "variable.parameter.hsp3",
              "match": "%[0-9]+"
            },
            {
              "name": "constant.character.escape.tag.hsp3",
              "match": "(?i)%(?:n|i|o|p|s|c)([0-9]+)?",
              "captures": {"1": {"name": "markup.italic.number.hsp3"}}
            },
            {
              "name": "constant.character.escape.tag.hsp3",
              "match": "(?i)%t([\\w\\p{Cn}`＠@]*)",
              "captures": {"1": {"name": "entity.name.tag.hsp3"}}
            },
            {"include": "#code"}
          ]
        },
        {
          "begin": "(?i)^\\s*(#const)(?:\\s(global))?(?:\\s+(double))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {"name": "storage.type.hsp3"},
            "4": {
              "name": "entity.name.section.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            }
          },
          "patterns": [
            {"include": "#comments"},
            {"include": "#constants"},
            {"include": "#operators"}
          ]
        },
        {
          "begin": "(?i)^\\s*(#enum)(?:\\s+(global))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.section.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            }
          },
          "patterns": [
            {"include": "#comments"},
            {"include": "#constants"},
            {"include": "#operators"}
          ]
        },
        {
          "begin": "(?i)^\\s*(#defc?func)(?:\\s+(local))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)(?:\\s+(onexit))?",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.function.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "4": {"name": "invalid.deprecated.hsp3"},
            "5": {"name": "storage.modifier.hsp3"}
          },
          "patterns": [{"include": "#deffunc_argument"}]
        },
        {
          "begin": "(?i)^\\s*(#modc?func)(?:\\s+(local))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.function.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "4": {"name": "invalid.deprecated.hsp3"}
          },
          "patterns": [{"include": "#deffunc_argument"}]
        },
        {
          "begin": "(?i)^\\s*(#modinit)(?=[^\\w\\p{Cn}`＠@])",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {"1": {"name": "keyword.control.hsp3"}},
          "patterns": [{"include": "#deffunc_argument"}]
        },
        {
          "begin": "(?i)^\\s*(#modterm)(?=[^\\w\\p{Cn}`＠@])",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {"1": {"name": "keyword.control.hsp3"}},
          "patterns": [
            {"include": "#comments"},
            {
              "match": "(?i)(?<=^|\\s|,)(local)(?:\\s([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*))?",
              "captures": {
                "1": {"name": "support.type.hsp3"},
                "2": {
                  "name": "variable.parameter.hsp3",
                  "patterns": [
                    {
                      "name": "invalid.illegal.hsp3",
                      "match": "(?<=\\s)[0-9].*"
                    },
                    {
                      "name": "invalid.illegal.hsp3",
                      "match": "(?<=\\s).*@.*"
                    }
                  ]
                },
                "3": {"name": "invalid.deprecated.hsp3"}
              }
            }
          ]
        },
        {
          "begin": "(?i)^\\s*(#c?func)(?:\\s+(global))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)(?:\\s+(onexit))?\\s*(\"[\\w\\p{Cn}＠@]+\")",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.function.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "4": {"name": "invalid.deprecated.hsp3"},
            "5": {"name": "storage.modifier.hsp3"},
            "6": {"name": "string.import.hsp3"}
          },
          "patterns": [{"include": "#func_argument"}]
        },
        {
          "begin": "(?i)^\\s*(#c?func)(?:\\s+(global))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)(?:\\s+(onexit))?\\s+([\\w\\p{Cn}]+)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.function.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "4": {"name": "invalid.deprecated.hsp3"},
            "5": {"name": "storage.modifier.hsp3"},
            "6": {"name": "string.import.hsp3"}
          },
          "patterns": [{"include": "#func_argument"}]
        },
        {
          "begin": "(?i)^\\s*(#usecom)(?:\\s+(global))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.section",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "4": {"name": "invalid.deprecated.hsp3"}
          },
          "patterns": [
            {"include": "#comments"},
            {"include": "#strings"}
          ]
        },
        {
          "begin": "(?i)^\\s*(#comfunc)(?:\\s+(global))?\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)\\s+([0-9]+)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "storage.modifier.hsp3"},
            "3": {
              "name": "entity.name.function.hsp3",
              "patterns": [{"include": "#identifier_rule"}]
            },
            "4": {"name": "invalid.deprecated.hsp3"},
            "5": {"name": "constant.numeric.hsp3"}
          },
          "patterns": [
            {"include": "#comments"},
            {
              "match": "(?i)(?<=^|\\s|,)(int|var|str|wstr|double|float|pval|bmscr|hwnd|hdc|hinst)(?=\\s|\\n|,|\\\\|¥|;|//|/\\*|\\*/)",
              "captures": {"1": {"name": "support.type.hsp3"}}
            }
          ]
        },
        {
          "begin": "(?i)^\\s*(#cmd)\\s+([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "end": "(?<!\\\\|¥)\\n",
          "beginCaptures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "entity.name.function.hsp3"},
            "3": {"name": "invalid.deprecated.hsp3"}
          },
          "patterns": [
            {"include": "#comments"},
            {"include": "#numbers"}
          ]
        },
        {
          "match": "^\\s*(#else|#endif|#epack|#if|#ifdef|#ifndef|#pack|#runtime|#undef|#uselib|#regcmd|#module|#global|#include|#addition|#uselib|#ahtmes)(?=[^\\w\\p{Cn}`＠])",
          "captures": {"1": {"name": "keyword.control.hsp3"}}
        },
        {
          "match": "^\\s*(##)([0-9]+)",
          "captures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "constant.numeric.hsp3"}
          }
        },
        {
          "match": "(?i)^\\s*(#aht)\\s+(class|name|author|ver|exp|icon|iconid)(?=[\\s|\\n|;|//|/*|*/])",
          "captures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "support.constant.hsp3"}
          }
        },
        {
          "match": "(?i)^\\s*(#bootopt)\\s+(notime|utf8|hsp64)(?=[\\s|\\n|;|//|/*|*/])",
          "captures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "support.constant.hsp3"}
          }
        },
        {
          "match": "(?i)^\\s*(#packopt)\\s+(name|runtime|type|xsize|ysize|hide|orgpath|icon|lang|version|manifest)(?=[\\s|\\n|;|//|/*|*/])",
          "captures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "support.constant.hsp3"}
          }
        },
        {
          "match": "(?i)^\\s*(#cmpopt)\\s+(ppout|optcode|optinfo|varname|varinit|optprm|skipjpspc|utf8)(?=[\\s|\\n|;|//|/*|*/])",
          "captures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "support.constant.hsp3"}
          }
        },
        {
          "match": "^\\s*(#\\S+)",
          "captures": {"1": {"name": "support.other.preprocessor.hsp3"}}
        }
      ]
    },
    "module_variable": {
      "patterns": [
        {"include": "#comments"},
        {
          "name": "invalid.illegal.hsp3",
          "match": "(?<=^|\\s|,)[0-9]+[\\w\\p{Cn}]*"
        },
        {
          "match": "([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "captures": {
            "1": {"name": "variable.name.hsp3"},
            "2": {"name": "invalid.deprecated.hsp3"}
          }
        }
      ]
    },
    "identifier_rule": {
      "patterns": [
        {
          "name": "invalid.illegal.hsp3",
          "match": "(?<=\\s)[0-9].*"
        },
        {
          "name": "entity.name.class.hsp3",
          "match": "@.+"
        }
      ]
    },
    "deffunc_argument": {
      "patterns": [
        {"include": "#comments"},
        {
          "match": "(?i)(?<=^|[^\\w\\p{Cn}`＠])\\s*((?:onexit)(?:@hsp)?)(?=[^\\w\\p{Cn}`＠])",
          "captures": {"1": {"name": "invalid.deprecated.hsp3"}}
        },
        {
          "match": "(?i)(?<=^|\\s|,)(int|var|array|str|double|label|local)(?:\\s([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*))?",
          "captures": {
            "1": {"name": "support.type.hsp3"},
            "2": {
              "name": "variable.parameter.hsp3",
              "patterns": [
                {
                  "name": "invalid.illegal.hsp3",
                  "match": "(?<=\\s)[0-9].*"
                },
                {
                  "name": "invalid.illegal.hsp3",
                  "match": "(?<=\\s).*@.*"
                }
              ]
            },
            "3": {"name": "invalid.deprecated.hsp3"}
          }
        }
      ]
    },
    "func_argument": {
      "patterns": [
        {"include": "#comments"},
        {
          "match": "(?<=^|[^\\w\\p{Cn}`＠])\\s*(int|var|str|wstr|sptr|wptr|double|float|pval|comobj|bmscr|prefstr|pexinfo|nullptr)(?=[^\\w\\p{Cn}`＠])",
          "captures": {"1": {"name": "support.type.hsp3"}}
        },
        {"include": "#numbers"}
      ]
    },
    "constants": {
      "patterns": [
        {"include": "#numbers"},
        {"include": "#strings"}
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.hsp3",
          "match": "(?i)(\\b0x|\\$)[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.hsp3",
          "match": "(?i)(\\b0b|%)[01]+\\b"
        },
        {
          "name": "constant.numeric.double.hsp3",
          "match": "\\b[0-9]+(\\.[0-9]+)?(E(\\+|-)?[0-9]*)?\\b"
        },
        {
          "name": "constant.numeric.double.hsp3",
          "match": "\\b[0-9]+(\\.[0-9]+)?F\\b"
        },
        {
          "name": "constant.numeric.decimal.hsp3",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.character.hsp3",
          "match": "'([¥\\\\].|[^¥\\\\])'",
          "captures": {"1": {"patterns": [{"match": "[¥\\\\].", "name": "constant.character.escape.hsp3"}]}}
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hsp3",
          "match": "\"((?:\\\\\"|\\\\\\\\|¥\"|¥¥|[^\"])*)\"",
          "captures": {"1": {"patterns": [{
            "name": "constant.character.escape.hsp3",
            "match": "[¥\\\\]."
          }]}}
        },
        {
          "name": "string.braces.hsp3",
          "begin": "\\{\"",
          "end": "\"\\}",
          "patterns": [{
            "name": "constant.character.escape.hsp3",
            "match": "[¥\\\\]."
          }]
        }
      ]
    },
    "label": {
      "patterns": [
        {
          "name": "markup.bold.hsp3",
          "match": "(?i)(?<=^|:|=|\\{|\\}|\\(|,|goto|gosub|oncmd|onexit|onkey|onclick|onerror)\\s*\\*([\\w\\p{Cn}`＠@]{1,59})([\\w\\p{Cn}`＠@]*)",
          "captures": {
            "1": {
              "patterns": [
                {
                  "name": "invalid.illegal.hsp3",
                  "match": "(?<=\\*)[0-9].*"
                },
                {
                  "name": "entity.name.class.hsp3",
                  "match": "@.*"
                }
              ]
            },
            "2": {"name": "invalid.deprecated.hsp3"}
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "invalid.illegal.hsp3",
          "match": "<>|%\\=|\\*\\*\\=|~|\\*\\*"
        },
        {	"comment": "comparison",
          "name": "keyword.operator.hsp3",
          "match": "\\!|<=|>=|==|\\!=|<|>"
        },
        {	"comment": "assignment & augmented",
          "name": "keyword.operator.hsp3",
          "match": "\\+=|-\\=|\\*=|/=|//=|&=|\\|¥|=|\\^=|>>=|<<="
        },
        {	"comment": "arithmetic",
          "name": "keyword.operator.hsp3",
          "match": "\\+|\\-|\\*|/|%|<<|>>|&|\\||\\^"
        },
        {	"comment": "increment",
          "name": "keyword.operator.hsp3",
          "match": "\\-\\-|\\+\\+"
        },
        {	"comment": "assignment",
          "name": "keyword.operator.hsp3",
          "match": "="
        },
        {	"comment": "delimiter",
          "name": "keyword.operator.hsp3",
          "match": ":"
        },
        {
          "name": "meta.brackets.hsp3",
          "match": "\\(|\\)|\\{|\\}|\\[|\\]"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hsp3",
          "match": "(?i)(?<=^|[^\\w\\p{Cn}`＠])\\s*(if|else|repeat|loop|break|continue|foreach|while|wend|for|next|do|until|_break|_continue|switch|case|default|swbreak|swend|wait|await|stop|return|end|run|exgoto|on|goto|gosub)(@hsp)?(?=[^\\w\\p{Cn}`＠])"
        },
        {
          "name": "keyword.hsp3",
          "match": "(?i)(?<=^|[^\\w\\p{Cn}`＠])\\s*(comevarg|comevent|delcom|newcom|querycom|sarrayconv|comevdisp|assert|logmes|button|chkbox|clrobj|combox|input|listbox|mesbox|objnable|objimage|objmode|objprm|objsel|objsize|objskip|objenable|bcopy|bload|bsave|chdir|chdpm|delete|dirlist|exist|memfile|mkdir|mci|mmload|mmplay|mmstop|comres|ddim|delmod|dim|dimtype|ldim|lpoke|memcpy|memexpand|memset|newlab|newmod|poke|sdim|wpoke|lpeek|peek|wpeek|getkey|mcall|mouse|randomize|setease|sortget|sortstr|sortval|stick|abs|absf|atan|stan|callfunc|cos|dirinfo|double|expf|getease|geteasef|gettime|ginfo|int|length|length2|length3|length4|libptr|limit|limitf|logf|objinfo|powf|rnd|sin|sqrt|str|strlen|sysinfo|tan|vartype|varuse|varptr|varsize|cnvstoa|cnvstow|getstr|noteadd|notedel|noteget|noteload|notesave|notesel|noteunsel|sortnote|split|strrep|cnvatos|cnvwtos|getpath|instr|notefind|noteinfo|strf|strmid|strtrim|dup|dupptr|mref|axobj|bgscr|bmpsave|boxf|buffer|celdiv|celload|celput|chgdisp|circle|cls|color|dialog|font|gcopy|gmode|grect|gradf|groll|grotate|gsel|gsquare|gzoom|hsvcolor|line|mes|palcolor|palette|pget|picload|pos|print|pset|redraw|screen|sendmsg|syscolor|sysfont|title|width|winobj)(@hsp)?(?=[^\\w\\p{Cn}`＠])"
        },
        {
          "match": "(?i)(?<=^|[^\\w\\p{Cn}`＠])\\s*((?:oncmd|onclick|onerror|onexit|onkey)(?:@hsp)?)(?:\\s*(goto|gosub))?(?=[^\\w\\p{Cn}`＠])",
          "captures": {
            "1": {"name": "keyword.control.hsp3"},
            "2": {"name": "keyword.method.hsp3"}
          }
        },
        {
          "name": "invalid.deprecated.hsp3",
          "match": "(?i)(?<=^|[^\\w\\p{Cn}`＠])\\s*(alloc)(?=[^\\w\\p{Cn}`＠])"
        },
